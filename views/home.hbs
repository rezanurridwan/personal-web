                        <div class="buttons">
                            <a href="#"></a><button class="btn btn-primary">Download CV</button></a>
                        </div>
                        {{#if islogin}}
                        <button class="btn btn-warning mt-1" type="submit"><a href="/edit-personaldata" style="text-decoration: none; color: white;">Edit</a></button>
                        {{/if}}
                    </div>
                </div>
            </div>
            <div class="main-right">
                <div class="right2">
                    <h2 class="title">About Me</h2>
                    <p class="text">{{article.aboutme}}</p>
