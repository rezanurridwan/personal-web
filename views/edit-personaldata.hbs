<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <!-- Bootstrap Js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Readex+Pro:wght@300&display=swap" rel="stylesheet">
    <script src="/public/js/script.js"></script>

    <!-- external CSS -->
    <link rel="stylesheet" href="/public/css/home.css">
    <link rel="stylesheet" href="/public/css/navbar.css">
    <link rel="stylesheet" href="/public/css/personaldata.css">

    <title>Personal Web</title>
  </head>
  <body>
      <!-- start navbar -->
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="/home"><img src="/public/img/brandred.png" alt=""></a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/home">HOME</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/articles">ARTICLES</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/form">HIRE ME</a>
              </li>
              <div class="sidebar-button">
                <form class="d-flex" id="login">
                {{#if islogin}}
                  <span class="login">{{user.name}}</span>
                  <span class="login">|| <a href="/logout">logout</a></span>
                {{else}}
                </form>
                <form class="d-flex">
                  <button class="btn btn-success" type="submit"><a href="/login" style="text-decoration: none; color: white;">Login</a></button>
                  <button class="btn btn-success" type="submit"><a href="/register" style="text-decoration: none; color: white;">Register</a></button>
                {{/if}}
                </form>
              </div>
            </div>
        </div>
      </nav>
      <!-- end navbar -->
        {{#if messages.danger}}
        <div class="alert alert-danger" role="alert">
        {{messages.danger}}
        </div>
        {{/if}}
      <!-- start main -->
      <div class="container-form bg-light">
          <div class="experiences">
            <h5>Your Data</h5>
        </div>
        <form action="/home" method="post" enctype="multipart/form-data" class="row g-3">
        <div class="col-md-5">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        
        <div class="col-5">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title">
        </div>
        <div class="col-md-5">
            <label for="photo" class="form-label">Photo</label>
            <input type="file" class="form-control" id="photo" name="photo">
        </div>
        <div class="col-5">
            <label for="phone" class="form-label">Phone</label>
            <input type="number" class="form-control" id="phone" name="photo">
        </div>
        <div class="col-5">
            <label for="email" class="form-label">email</label>
            <input type="email" class="form-control" id="email" name="photo">
        </div>
        <div class="col-5">
            <label for="address" class="form-label">Address</label><br>
            <textarea name="address" id="address" cols="34" rows="5"></textarea>
        </div>
        <div class="experiences">
            <h5>Your Experiences</h5>
        </div>
        <div class="col-5">
            <label for="company-1" class="form-label">Company-1</label>
            <input type="text" class="form-control" id="company" name="company">
        </div>
        <div class="col-5">
            <label for="jobtitle" class="form-label">Jobtitle</label>
            <input type="text" class="form-control" id="jobtitle-1" name="jobtitle-1">
        </div>
        <div class="col-2">
            <label for="year-1" class="form-label">Year</label>
            <input type="number" class="form-control" id="year-1" name="year-1">
        </div>
        
        <div class="col-5">
            <label for="company-2" class="form-label">Company-2</label>
            <input type="text" class="form-control" id="company-2" name="company-2">
        </div>
        <div class="col-5">
            <label for="jobtitle-2" class="form-label">Jobtitle</label>
            <input type="text" class="form-control" id="jobtitle-2" name="jobtitle-2">
        </div>
        <div class="col-2">
            <label for="year-2" class="form-label">Year</label>
            <input type="number" class="form-control" id="year-2" name="year-2">
        </div>
        
        <div class="col-5">
            <label for="company-3" class="form-label">Company-3</label>
            <input type="text" class="form-control" id="company-3" name="company-3">
        </div>
        <div class="col-5">
            <label for="jobtitle-3" class="form-label">Jobtitle</label>
            <input type="text" class="form-control" id="jobtitle-3" name="jobtitle-3">
        </div>
        <div class="col-2">
            <label for="year-3" class="form-label">Year</label>
            <input type="number" class="form-control" id="year-3" name="year-3">
        </div>

        <div class="col-5">
            <label for="company-4" class="form-label">Company-4</label>
            <input type="text" class="form-control" id="company-4" name="company-4">
        </div>
        <div class="col-5">
            <label for="jobtitle-4" class="form-label">Jobtitle</label>
            <input type="text" class="form-control" id="jobtitle-4" name="jobtitle-4">
        </div>
        <div class="col-2">
            <label for="year-4" class="form-label">Year</label>
            <input type="number" class="form-control" id="year-4" name="year-4">
        </div>
        
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Sign in</button>
        </div>
        </form>
      </div>
      <!-- end main -->

      <!-- start footer -->
      <footer>
        <span>All Reserved |2021| Reza Nur Ridwan &trade;</span>
      </footer>
      <!-- end footer -->
  </body>
</html>